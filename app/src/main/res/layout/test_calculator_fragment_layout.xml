<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/test_header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timer_container"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Title_textView"
                        android:layout_width="265dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:paddingStart="15dp"
                        android:paddingTop="15dp"
                        android:paddingEnd="15dp"
                        android:text="MathQuizApp Calculator"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/operation_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Title_textView"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/colorPrimaryDark"
                        android:padding="15dp"
                        android:text="0"
                        android:textAlignment="viewStart"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlank"
                        android:textSize="18sp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/test_number_buttons_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/test_header_container"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/test_buttons_line_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp">

                        <Button
                            android:id="@+id/test_button_1"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle2"
                            android:text="1"
                            android:textSize="22sp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                        <Button
                            android:id="@+id/test_button_2"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignLeft="@+id/test_button_1"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="90dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle2"
                            android:text="2"
                            android:textSize="22sp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                        <Button
                            android:id="@+id/test_button_3"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignLeft="@+id/test_button_2"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="90dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle2"
                            android:text="3"
                            android:textSize="22sp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                        <Button
                            android:id="@+id/test_button_div"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignLeft="@+id/test_button_3"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="90dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle"
                            android:text="/"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/test_buttons_line_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/test_buttons_line_1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp">

                        <Button
                            android:id="@+id/test_button_4"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle2"
                            android:text="4"
                            android:textSize="22sp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                        <Button
                            android:id="@+id/test_button_5"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignLeft="@+id/test_button_4"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="90dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle2"
                            android:text="5"
                            android:textSize="22sp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                        <Button
                            android:id="@+id/test_button_6"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignLeft="@+id/test_button_5"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="90dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle2"
                            android:text="6"
                            android:textSize="22sp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                        <Button
                            android:id="@+id/test_button_mul"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignLeft="@+id/test_button_6"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="90dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle"
                            android:text="*"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/test_buttons_line_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/test_buttons_line_2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp">

                        <Button
                            android:id="@+id/test_button_7"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle2"
                            android:text="7"
                            android:textSize="22sp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                        <Button
                            android:id="@+id/test_button_8"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignLeft="@+id/test_button_7"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="90dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle2"
                            android:text="8"
                            android:textSize="22sp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                        <Button
                            android:id="@+id/test_button_9"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignLeft="@+id/test_button_8"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="90dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle2"
                            android:text="9"
                            android:textSize="22sp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                        <Button
                            android:id="@+id/test_button_sub"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignLeft="@+id/test_button_9"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="90dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle"
                            android:text="-"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/test_buttons_line_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/test_buttons_line_3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">

                        <Button
                            android:id="@+id/test_button_clear"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle"
                            android:text="C"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                        <Button
                            android:id="@+id/test_button_0"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignLeft="@+id/test_button_clear"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="90dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle2"
                            android:text="0"
                            android:textSize="22sp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                        <Button
                            android:id="@+id/test_button_equal"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignLeft="@+id/test_button_0"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="90dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle"
                            android:text="="
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                        <Button
                            android:id="@+id/test_button_add"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignLeft="@+id/test_button_equal"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="90dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle"
                            android:text="+"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                    </RelativeLayout>

                </RelativeLayout>


            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>