<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/timer_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:fontFamily="monospace"
                    android:text="Timer:"
                    android:textColor="@color/colorBlank"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/timer_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:fontFamily="monospace"
                    android:text="01:30"
                    android:textColor="@color/colorBlank"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/score_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/timer_container"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:fontFamily="monospace"
                    android:text="Score:"
                    android:textColor="@color/colorBlank"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/score_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:fontFamily="monospace"
                    android:text="232123"
                    android:textColor="@color/colorBlank"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/test_header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timer_container"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/showExplanation_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:paddingStart="15dp"
                        android:paddingTop="15dp"
                        android:paddingEnd="15dp"
                        android:text="Find the output of this operation"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18dp" />

                    <Button
                        android:id="@+id/QuestionTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/showExplanation_textView"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/colorPrimaryDark"
                        android:padding="15dp"
                        android:text="15 + 20 = "
                        android:textAlignment="viewStart"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlank"
                        android:textSize="18sp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/test_number_buttons_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/test_header_container"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/test_buttons_line_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp">

                        <Button
                            android:id="@+id/test_button_1"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle2"
                            android:text="1"
                            android:textSize="22sp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                        <Button
                            android:id="@+id/test_button_2"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignLeft="@+id/test_button_1"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle2"
                            android:text="2"
                            android:textSize="22sp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                        <Button
                            android:id="@+id/test_button_3"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignLeft="@+id/test_button_2"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle2"
                            android:text="3"
                            android:textSize="22sp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/test_buttons_line_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/test_buttons_line_1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp">

                        <Button
                            android:id="@+id/test_button_4"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle2"
                            android:text="4"
                            android:textSize="22sp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                        <Button
                            android:id="@+id/test_button_5"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignLeft="@+id/test_button_4"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle2"
                            android:text="5"
                            android:textSize="22sp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                        <Button
                            android:id="@+id/test_button_6"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignLeft="@+id/test_button_5"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle2"
                            android:text="6"
                            android:textSize="22sp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/test_buttons_line_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/test_buttons_line_2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp">

                        <Button
                            android:id="@+id/test_button_7"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle2"
                            android:text="7"
                            android:textSize="22sp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                        <Button
                            android:id="@+id/test_button_8"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignLeft="@+id/test_button_7"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle2"
                            android:text="8"
                            android:textSize="22sp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                        <Button
                            android:id="@+id/test_button_9"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignLeft="@+id/test_button_8"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle2"
                            android:text="9"
                            android:textSize="22sp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/test_buttons_line_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/test_buttons_line_3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">

                        <Button
                            android:id="@+id/test_button_point"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle"
                            android:text="."
                            android:textSize="24sp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                        <Button
                            android:id="@+id/test_button_0"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignLeft="@+id/test_button_point"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle2"
                            android:text="0"
                            android:textSize="22sp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                        <Button
                            android:id="@+id/test_button_clear"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignLeft="@+id/test_button_0"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonstyle"
                            android:text="AC"
                            android:textSize="22sp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlank" />

                    </RelativeLayout>

                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/next_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/test_number_buttons_container"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:background="@color/appYellow"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="@color/colorBlank"
                android:textSize="18sp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>